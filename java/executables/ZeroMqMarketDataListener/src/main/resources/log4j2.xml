                <!--<SizeBasedTriggeringPolicy size="${sys:log.fileSize}" />-->
            <!--</Policies>-->
            <!--<DefaultRolloverStrategy max="${numFiles}" />-->
        <!--</RollingFile>-->
    </appenders>

    <loggers>
        <!-- trace, debug, info, warn, error, fatal -->
        <!--<root level="${sys:log.level}">-->
            <!--<appender-ref ref="${sys:log.output}" />-->
        <!--</root>-->


        <!--Console info output-->
        <root level="INFO">
            <appender-ref ref="console" />
        </root>


    </loggers>
</configuration>